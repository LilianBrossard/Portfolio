<div class="w-full h-full p-2 lg:p-8">
    <a href={`/work/${slug}`}>
        <div>
            <img
                src={data.img}
                alt={data.img_alt || ""}
                loading="lazy"
                decoding="async"
                class="w-full h-auto object-cover rounded-lg shadow-lg hover:scale-[1.02] duration-500 ease-in-out"
            />
        </div>

        <h1 class="text-2xl lg:text-4xl xl:text-6xl">{data.title}</h1>
        <p class="text-lg lg:text-xl xl:text-2xl>">
            {data.description}
        </p>
        <div class="flex mt-4
            flex-row
            flex-wrap">
            {data.tags.map((t) => <Tag>{t}</Tag>)}
        </div>
    </a>
</div>
