---
import type { CollectionEntry } from "astro:content";

interface Props {
  project: CollectionEntry<"work">;
}

const { data, slug } = Astro.props.project;
---

<div class="deco rellax" data-rellax-speed="5"></div>
<div class="back" data-aos="fade-up" data-aos-anchor-placement="center-bottom">
  <span class="title">{data.title}</span>
  <a class="card" href={`/portfolio/work/${slug}`}>
    <img
      src={data.img}
      alt={data.img_alt || ""}
      loading="lazy"
      decoding="async"
    />
  </a>
</div>

<style>
  .deco {
    display: none;
  }
  .back {
    border: outset 1px var(--gray-800);
    rotate: 5deg;
    padding: 5px;
    margin: 7rem 0.5rem;
  }
  .card {
    rotate: -5deg;
    display: grid;
    grid-template: auto 1fr / auto 1fr;
    width: 90vw;
    height: 30vh;
    background: var(--gradient-subtle);
    border: 1px solid var(--gray-800);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    text-decoration: none;
    font-family: var(--font-brand);
    font-size: var(--text-lg);
    font-weight: 500;
    transition: box-shadow var(--theme-transition);
  }

  .card:hover {
    box-shadow: var(--shadow-md);
  }

  .title {
    rotate: -5deg;
    z-index: 1;
    margin: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--gray-900);
    color: var(--accent-dark);
  }

  img {
    grid-area: 1 / 1 / 3 / 3;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @media (min-width: 50em) {
    .deco {
      box-shadow: 0 0 20px var(--accent-regular);
      display: block;
      position: absolute;
      left: 2%;
      width: 5px;
      height: 30%;
      background-color: var(--accent-dark);
      box-shadow:;
    }
    .card {
      height: 70vh;
      width: 70vw;
    }
    .back {
      margin: 15rem 0.5rem;
      padding: 10px;
    }
  }
</style>
