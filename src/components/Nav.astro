---
import Icon from "./Icon.astro";
import ThemeToggle from "./ThemeToggle.astro";
import type { iconPaths } from "./IconPaths";

/** Main menu items */
const textLinks: { label: string; href: string }[] = [
  { label: "Accueil", href: "/portfolio/" },
  { label: "Projets", href: "/portfolio/work/" },
  { label: "Ã€-propos", href: "/portfolio/about/" },
];

const iconLinks: {
  label: string;
  href: string;
  icon: keyof typeof iconPaths;
}[] = [
  {
    label: "GitHub",
    href: "https://github.com/LilianBrossard",
    icon: "github-logo",
  },
  {
    label: "linkedin",
    href: "https://www.linkedin.com/in/lilian-brossard-1b6147294/",
    icon: "linkedin-logo",
  },
  {
    label: "mail",
    href: "mailto:lilian.brossard@gmail.com",
    icon: "paper-plane-tilt",
  },
];
---

<nav>
  <div class="menu-header" data-aos="fade-right">
    <a href="/portfolio/" class="site-title">
      <Icon
        icon="terminal-window"
        color="var(--accent-regular)"
        size="1.6em"
        gradient
      />
      Lilian Brossard
    </a>
  </div>

  <div class="nav-items" data-aos="fade-down">
    {
      textLinks.map(({ label, href }) => (
        <div>
          <a class="linknav" href={href}>
            {label}
          </a>
        </div>
      ))
    }
  </div>
  <div class="asidelink" data-aos="fade-left">
    <div class="socials">
      {
        iconLinks.map(({ href, icon, label }) => (
          <a href={href} class="social">
            <span class="sr-only">{label}</span>
            <Icon
              icon={icon}
              color={"var(--accent-light)"}
              gradient={true}
              size={"2rem"}
            />
          </a>
        ))
      }
    </div>

    <div class="theme-toggle">
      <ThemeToggle />
    </div>
  </div>
</nav>

<style>
  .socials {
    margin: 5px;
  }
  .social {
    text-decoration: none;
  }
  .theme-toggle {
    padding: 5px 20px;
  }
  nav {
    box-shadow: 0 5px 5px var(--gray-600);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
  }
  .menu-header {
    display: none;
  }
  .nav-items {
    display: flex;
    flex-direction: row;
    padding: auto;
  }
  .linknav {
    padding: 0 20px;
    color: var(--gray-400);
    text-decoration: 1px solid underline transparent;
    text-underline-offset: 0.25em;
    transition: text-decoration-color var(--theme-transition);
  }
  .linknav:hover,
  .linknav:focus {
    text-decoration-color: currentColor;
  }
  .asidelink {
    display: flex;
    flex-direction: row;
  }
  @media (min-width: 50em) {
    nav {
      display: flex;
      flex-direction: row;
    }
    .menu-header {
      display: block;
    }
    .site-title {
      padding: 5px 20px;
      color: var(--gray-100);
      text-decoration: none;
    }
    .asidelink {
      display: flex;
      flex-direction: row;
      justify-content: center;
    }
  }
</style>
